package logic;

import tink.core.*;
import tink.RunLoop;
import tink.runloop.Worker;

/**
 * ...
 * @author Bjorn
 */
@:final
class LogicLoop {

	public function new() {

	}

	public static function compute(ais:List<AI>, worker:Worker) {

		for (ai in ais) {
			worker.work(function () {
				ai.tick();
			});
		}

		return RunLoop.current.delegate(Noise, worker);
	}

}